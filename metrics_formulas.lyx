\begin_layout Section
BPR
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P=\frac{\left|S\cap\left(\bigcup\limits_{i=1}^{M}G_{i}\right)\right|}{|S|}
\]

\end_inset


\begin_inset Formula 
\[
R=\frac{{\sum\limits_{i=1}^{M}\left|S\cap G_{i}\right|}}{\sum\limits_{i=1}^{M}\left|G_{i}\right|}
\]

\end_inset


\begin_inset Formula 
\[
F=\frac{2PR}{P+R}
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $S$
\end_inset

 and 
\begin_inset Formula $\{G_{i}\}_{i=1}^{M}$
\end_inset

 are boundary maps and 
\begin_inset Formula $\cap$
\end_inset

 does a bipartite graph assignment between them.
\end_layout

\begin_layout Section
RI (Rand Index)
\end_layout

\begin_layout Subsection
RI
\end_layout

\begin_layout Standard
between two segmentations
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
RI(S,G)=\frac{1}{T}\sum\limits_{j<k}\left[\mathbb{I}\left(S(j)=S(k)\wedge G(j)=G(k)\right)+\mathbb{I}\left(S(j)\neq S(k)\wedge G(j)\neq G(k)\right)\right]
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\mathbb{I}$
\end_inset

 is the identity function,
\end_layout

\begin_layout Standard
\begin_inset Formula $S(j)$
\end_inset

 is the label of pixel 
\begin_inset Formula $j$
\end_inset

 in the segmentation 
\begin_inset Formula $S$
\end_inset

,
\end_layout

\begin_layout Standard
\begin_inset Formula $N=\left|S\right|=\left|G\right|$
\end_inset

 is number of pixels in the image (and each segmentation), and 
\end_layout

\begin_layout Standard
\begin_inset Formula $T=\left(\frac{N}{2}\right)$
\end_inset

 is the number of possible unique pairs among 
\begin_inset Formula $N$
\end_inset

 pixels.
\end_layout

\begin_layout Subsection
RSRI (Random Subsample RI)
\end_layout

\begin_layout Standard
previously CPD (Crude Patch Distance), which was a misnomer
\end_layout

\begin_layout Standard
between two segmentations
\end_layout

\begin_layout Subsection
PRI (Probabilistic RI)
\end_layout

\begin_layout Standard
between a test segmentation and multiple ground truths
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
PRI(S,\{G_{i}\}_{i=1}^{M})=\frac{1}{T}\sum\limits_{j<k}\left[c_{jk}p_{jk}+\left(1-c_{jk}\right)\left(1-p_{jk}\right)\right]
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $c_{jk}=\mathbb{I}\left(S(j)=S(k)\right)$
\end_inset

 - the event of the pair of pixels 
\begin_inset Formula $j$
\end_inset

 and 
\begin_inset Formula $k$
\end_inset

 having the same label in segmentation 
\begin_inset Formula $S$
\end_inset

, and
\end_layout

\begin_layout Standard
\begin_inset Formula $p_{jk}$
\end_inset

 - probability of 
\begin_inset Formula $c_{jk}$
\end_inset

.
\end_layout

\begin_layout Section
SC (Segmentation Covering)
\end_layout

\begin_layout Subsection
Overlap
\end_layout

\begin_layout Standard
Overlap of two regions 
\begin_inset Formula $s$
\end_inset

 and 
\begin_inset Formula $g$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\mathcal{O}\left(s,g\right)=\frac{\left|s\cap g\right|}{\left|s\cup g\right|}
\]

\end_inset


\end_layout

\begin_layout Subsection
IoU (intersection over Union), a.k.a.
 Jaccard Index
\end_layout

\begin_layout Standard
How to normalise it in the case of two segmentations 
\begin_inset Formula $S=\left\{{s_{i}}\right\}_{i=1}^{p}$
\end_inset

 and 
\begin_inset Formula $G=\left\{{g_{j}}\right\}_{j=1}^{q}$
\end_inset

 ?
\begin_inset Formula 
\[
IoU(S,G)=\frac{\sum\limits_{i=1}^{p}\sum\limits _{j=1}^{q}\mathcal{O}\left(s_{i},g_{j}\right)}{\Gamma_{G}}
\]

\end_inset

where 
\begin_inset Formula $\Gamma_{S}=p$
\end_inset

 and 
\begin_inset Formula $\Gamma_{G}=q$
\end_inset

 - number of segments in each segmentation.
\end_layout

\begin_layout Standard
The above is not symmetric w.r.t.
 
\begin_inset Formula $S$
\end_inset

 and 
\begin_inset Formula $G$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
IoU(S,G)=\frac{\sum\limits_{i=1}^{p}\sum\limits _{j=1}^{q}\mathcal{O}\left(s_{i},g_{j}\right)}{\Gamma_{S}\Gamma_{G}}
\]

\end_inset


\end_layout

\begin_layout Standard
The above would penalise two equal segmentations if they have larger amount
 of segments.
\end_layout

